{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-3">{{ app.user.userIdentifier }}</h2>
        <h3>Mon Panier</h3>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Produit</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Lien téléchargement</th>
            </tr>
            </thead>
            <tbody>
            {% for cart in user.carts %}
                <tr>
                    <th scope="row">{{ cart.id }}</th>
                    <td>{{ cart.product.title }}</td>
                    <td>{{ cart.createdAt|date('d-m-Y H:i:s')  }}</td>
                    <td><a href="{{ asset('uploads/files/' ~ cart.product.fileZip) }}" id="downloadLink" download>Télécharger</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        <h3>Mes Produits</h3>
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col">Images</th>
                <th scope="col">Fichier</th>
                <th scope="col">Editer</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for product in user.products %}
            <tr>
                <th scope="row">{{ product.id }}</th>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{% for image in product.images %}
                    {{ image.name }}
                {% endfor %}</td>
                <td>{{product.filezip}}</td>
                <td>   <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

                    </td>
                <td>{{ include('product/_delete_form.html.twig') }}</td>
            </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
    {% block javascripts %}
        <script src="{{ asset('js/cartUpdate.js') }}"></script>
    {% endblock %}
{% endblock %}