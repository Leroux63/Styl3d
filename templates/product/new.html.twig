{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center ">
        <h2 class="mt-3">Ajouter un nouveau produit</h2>
    </div>
    <div class="container ">
        <div class="formProduct">
            <div class="row my-3">
                {{ form_start(form) }}
                <label for="title">Titre</label>
                <div class="form-input my-1">
                    {{ form_widget(form.title, {'attr': {"class": "form-control"}}) }}
                </div>
                <label for="description">Description</label>
                <div class="form-input my-1 ">
                    {{ form_widget(form.description, {'attr': {"class": "form-control"}}) }}
                </div>
                <label for="productCategories">Choix des cat√©gories</label>
                <div class="form-input my-1">
                    {{ form_widget(form.productCategories, {'attr': {"class": "form-control"}}) }}
                </div>
                <div>
                    {{ form_widget(form.user, { 'attr' : { 'style':'display:none'} }) }}
                </div>
                <div>
                    {{ form_widget(form.createdAt, { 'attr' : { 'style':'display:none'} }) }}
                </div>
                <label for="fileZip">Fichier 3D format zip</label>
                <div class="form-input my-3">
                    {{ form_row(form.fileZip) }}
                </div>
                <label for="images">Choix des images</label>
                <div class="form-input">
                    {{ form_row(form.images) }}
                </div>
                <div class="d-flex my-1">
                    <button type="submit" class="btn text-bg-primary mb-3">Ajouter le produit</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
